@model HW1c.Models.HomeViewModel 
@{
    ViewBag.Title = "Home Page";
}

<br />
<div class="jumbotron">
    <h1>Tong Ding</h1>
    <img src="~/Content/Img/LvDog.PNG" height="400" class="rounded-circle mx-auto d-block" alt="Cinque Terre" />
    <div class="row text-center">
        <div class="col">
            <img src="~/Content/Img/Shedding.jpg" height="400" />
        </div>
    </div>

    <div class="col text-center">
        <h2>Number of Phones</h2>
        <h3>@Model.PhoneCount</h3>
    </div>

    <div class="col text-center">
        <h2>Number of Users</h2>
        <h3>@Model.UserCount</h3>
    </div>

    <div class="media">
        <img class="align-self-center mr-3" src="~/Content/Img/WSS.jpg" alt="Generic placeholder image">
        <div class="media-body">
            <h5 class="mt-0">WSS</h5>
            <p>Best Puppies Ever</p>
            <p class="mb-0">Cool</p>
        </div>
    </div>
</div>

